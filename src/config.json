{
	"timers": [
	{
		"name": "1Hz",
		"capacity": 1,
		"initialvalue": 1,
		"intervalms": 1000
	}
	],
	"queues": [
	{
		"name": "LIGHT",
		"clientid": "LIGHT",
		"capacity": 10,
		"noldvalues": 1
	},
	{
		"name": "TPLINK_PLUG_SET",
		"clientid": "TPLINK_PLUG_SET",
		"capacity": 2,
		"noldvalues": 1,
		"actuator": true
        },
	{
		"name": "MESSAGES",
		"clientid": "MESSAGES",
		"capacity": 10,
		"noldvalues": 10,
		"actuator": true
	},
	{
		"name": "TWITTER",
		"clientid": "TWITTER",
		"capacity": 10,
		"noldvalues": 10
	},
	{
		"name": "TRANSACTIONS",
		"clientid": "TRANSACTIONS",
		"capacity": 10,
		"noldvalues": 10
	}
	],
	"rules": [
{
	"name": "light on",
	"manual": true,
	"actions": [
	{
		"actuator": "TPLINK_PLUG_SET",
		"value": "{data:'on'}"
	}
	]
},
{
	"name": "light off",
	"manual": true,
	"actions": [
	{
		"actuator": "TPLINK_PLUG_SET",
		"value": "{data:'off'}"
	}
	]
},
{
	"name": "say hello",
	"manual": true,
	"actions": [
	{
		"actuator": "MESSAGES",
		"value": "{title:'Hello', topic:'hello', content: 'this is just the app-automate \"say hello\" rule saying hello'}"
	}
	]
},
	{
 		"name": "light on when not dark",
		"qs": {
			"timer": "1Hz",
			"light": "LIGHT",
			"plug": "TPLINK_PLUG_SET"
		},
		"preconditions": [
			"timer.max > timer.current",
			"light.max > light.empty",
			"light.get(light.max).value[1] > 0",
			"plug.max == plug.empty || plug.get(plug.max).value.data == 'off'"
		],
		"actions": [
		{
			"actuator": "TPLINK_PLUG_SET",
			"value": "{data:'on'}"
		}
		],
		"updates": [
			"timer.current ++"
		]
	},
	{
                "name": "light off when dark",
                "qs": {
                        "timer": "1Hz",
                        "light": "LIGHT",
                        "plug": "TPLINK_PLUG_SET"
                },
                "preconditions": [
                        "timer.max > timer.current",
                        "light.max > light.empty",
                        "light.get(light.max).value[1] < 1",
                        "plug.max == plug.empty || plug.get(plug.max).value.data == 'on'"
                ],
                "actions": [
                {
                        "actuator": "TPLINK_PLUG_SET",
                        "value": "{data:'off'}"
                },
		{
			"actuator": "MESSAGES",
			"value": "{title:'dark',content:'its dark, but it was '+light.get(light.max-1).value[1],topic:'darkness',priority:1}"
		}
                ],
                "updates": [
                        "timer.current ++"
                ]
	}
	]
}

